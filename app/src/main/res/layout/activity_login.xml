<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_activity_lyt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_background">



    <ImageView
        android:id="@+id/icon_go4lunch"
        android:layout_width="336dp"
        android:layout_height="168dp"
        android:src="@drawable/ic_go4lunch"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/title_go4lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/icon_go4lunch"
        app:layout_constraintLeft_toRightOf="parent"/>

    <TextView
        android:id="@+id/moto_go4lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Find a nice restaurant and invite your co-workers for lunch!"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/title_go4lunch"
        app:layout_constraintLeft_toRightOf="parent"/>


    <Button
        android:id="@+id/facebook_login_button"
        style="@style/com_facebook_loginview_default_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:background="@drawable/fui_idp_button_background_facebook"
        android:drawableStart="@drawable/fui_ic_facebook_white_22dp"
        android:padding="16dp"
        android:text="@string/fui_sign_in_with_facebook"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/google_login_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/google_login_button"
        style="@style/com_facebook_loginview_default_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/fui_idp_button_background_google"
        android:drawableStart="@drawable/fui_ic_googleg_color_24dp"
        android:padding="16dp"
        android:layout_marginBottom="96dp"
        android:text="@string/fui_sign_in_with_google"
        android:textAllCaps="false"
        android:textColor="@color/common_google_signin_btn_text_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>